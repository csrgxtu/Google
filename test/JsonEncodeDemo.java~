import org.json.simple.JSONObject;

public class JsonEncodeDemo {

  public static void main(String[] args) {
    JsonEncodeDemo jsDemo = new JsonEncodeDemo();
    JSONObject json = jsDemo.jsonRest();
    System.out.println(json);
  }

  public JSONObject jsonRest() {
    JSONObject json = new JSONObject();

    json.put("Title", "Ubuntu:The world's most popular free OS");
    json.put("Link", "http://www.ubuntu.com/");
    json.put("Abstract", "Fast, secure and stylishly simple, the Ubuntu operating system is used by 20 million people every day, You can use it freely without any pays");

    return json;
  }
}
